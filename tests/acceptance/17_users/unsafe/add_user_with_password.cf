#######################################################
#
# Test adding a user with a password.
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
}

#######################################################

bundle agent init
{
  # Remove him first, should he already be present.
  users:
    "johndoe"
      policy => "absent";
}

#######################################################

bundle agent test
{
  users:
    "johndoe"
      policy => "present",
      password => test_password;
}

body password test_password
{
  format => "plaintext";
  data => "j0hnd0e";
}

#######################################################

bundle agent check
{
  classes:
      # Make sure the password field has grown to more than a few characters.
      "ok" not => strcmp("0", countlinesmatching("^johndoe:[^:][^:][^:][^:][^:]*:.*", "/etc/shadow"));

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
