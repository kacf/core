#######################################################
#
# Test modifying a user with a password.
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub", "user_queries.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
}

#######################################################

bundle agent init
{
  vars:
    # This is the same password as the plaintext one further down.
    "hash" string => "$1$vUsR5eoG$cci6C2jKvoYNuyjL5macS1";

  users:
    "johndoe"
      policy => "present",
      password => init_password;
}

body password init_password
{
  format => "hash";
  data => "$(hash)";
}

#######################################################

bundle agent test
{
  users:
    "johndoe"
      policy => "present",
      password => test_password;
}

body password test_password
{
  format => "plaintext";
  data => "j0hnd0e";
}

#######################################################

bundle agent check
{
  vars:
    "hash" string => escape("$(init.hash)");

  classes:
    # Make sure it is the same as before.
    "ok" not => strcmp("0", countlinesmatching("^johndoe:$(hash):.*", "/etc/shadow"));

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
