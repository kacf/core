#######################################################
#
# Test warning about removing a user
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub", "user_queries.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
}

#######################################################

bundle agent init
{
  users:
    "johndoe"
      policy => "present";
}

#######################################################

bundle agent test
{
  users:
    "johndoe"
      action => test_action,
      policy => "absent";
}

body action test_action
{
  action_policy => "warn";
}

#######################################################

bundle agent check
{
  classes:
      "ok" expression => regcmp(".*johndoe.*", execresult("$(G.grep) johndoe /etc/passwd", "noshell"));

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
