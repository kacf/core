#######################################################
#
# Test adding a user with a specific shell.
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
}

#######################################################

bundle agent init
{
  # Remove him first, should he already be present.
  users:
    "johndoe"
      policy => "absent";
}

#######################################################

bundle agent test
{
  users:
    "johndoe"
      policy => "present",
      shell => "$(G.cat)";
}

#######################################################

bundle agent check
{
  vars:
    "currentdir" string => dirname("$(this.promise_filename)");

  classes:
    "ok" expression => strcmp("Succeeded", execresult("sudo su johndoe $currentdir$(G.DS)text.txt"));

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
