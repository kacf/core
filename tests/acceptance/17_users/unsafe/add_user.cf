#######################################################
#
# Test adding a user
#
#######################################################

body common control
{
      inputs => { "../../default.cf.sub" };
      bundlesequence  => { default("$(this.promise_filename)") };
}

#######################################################

bundle agent init
{
  # Remove him first, should he already be present.
  users:
    "johndoe"
      policy => "absent";
}

#######################################################

bundle agent test
{
  users:
    "johndoe"
      policy => "present";
}

#######################################################

bundle agent check
{
  classes:
      "ok" expression => regcmp(".*johndoe.*", execresult("$(G.grep) johndoe /etc/passwd", "noshell"));

  reports:
    ok::
      "$(this.promise_filename) Pass";
    !ok::
      "$(this.promise_filename) FAIL";
}
